#!/usr/bin/env bash
#
# link - create symlinks for dotfiles and config directories
#
# This script can be run standalone or sourced by other scripts.

set -e

DOTFILES_ROOT="${DOTFILES_ROOT:-$(cd "$(dirname "$0")/.." && pwd -P)}"

info () {
  printf "[ \033[00;34m..\033[0m ] $1\n"
}

success () {
  printf "[ \033[00;32mOK\033[0m ] $1\n"
}

user () {
  printf "[ \033[0;33m??\033[0m ] $1\n"
}

link_file () {
  local src=$1 dst=$2

  local overwrite= backup= skip=
  local action=

  if [ -f "$dst" -o -d "$dst" -o -L "$dst" ]
  then

    if [ "$overwrite_all" == "false" ] && [ "$backup_all" == "false" ] && [ "$skip_all" == "false" ]
    then

      local currentSrc="$(readlink $dst)"

      if [ "$currentSrc" == "$src" ]
      then

        skip=true;

      else

        user "File already exists: $dst ($(basename "$src")), what do you want to do?\n\
        [s]kip, [S]kip all, [o]verwrite, [O]verwrite all, [b]ackup, [B]ackup all?"
        read -n 1 action

        case "$action" in
          o )
            overwrite=true;;
          O )
            overwrite_all=true;;
          b )
            backup=true;;
          B )
            backup_all=true;;
          s )
            skip=true;;
          S )
            skip_all=true;;
          * )
            ;;
        esac

      fi

    fi

    overwrite=${overwrite:-$overwrite_all}
    backup=${backup:-$backup_all}
    skip=${skip:-$skip_all}

    if [ "$overwrite" == "true" ]
    then
      rm -rf "$dst"
      success "removed $dst"
    fi

    if [ "$backup" == "true" ]
    then
      mv "$dst" "${dst}.backup"
      success "moved $dst to ${dst}.backup"
    fi

    if [ "$skip" == "true" ]
    then
      # Don't print anything for skipped files (already linked)
      return 1
    fi
  fi

  if [ "$skip" != "true" ]  # "false" or empty
  then
    ln -s "$1" "$2"
    success "linked $1 to $2"
    return 0
  fi
  return 1
}

install_dotfiles () {
  local overwrite_all=false backup_all=false skip_all=false
  local has_changes=false

  # Process top-level *.symlink files
  for src in "$DOTFILES_ROOT"/*.symlink
  do
    [ -f "$src" ] || continue
    dst="$HOME/.$(basename "${src%.symlink}")"
    if link_file "$src" "$dst"; then
      has_changes=true
    fi
  done

  # Process *.symlink files in subdirectories (maxdepth 2)
  for src in "$DOTFILES_ROOT"/*/*.symlink
  do
    [ -f "$src" ] || continue

    local parent_dir=$(basename "$(dirname "$src")")

    # Skip dot directories (handled separately below)
    [[ "$parent_dir" == .* ]] && continue

    # Link to home directory
    dst="$HOME/.$(basename "${src%.symlink}")"
    if link_file "$src" "$dst"; then
      has_changes=true
    fi
  done

  if [ "$has_changes" = false ]; then
    success "all dotfiles already linked"
  fi
}

install_dot_dirs () {
  local overwrite_all=false backup_all=false skip_all=false
  local has_changes=false

  # Process all dot directories in DOTFILES_ROOT
  for src_dir in "$DOTFILES_ROOT"/.*/
  do
    # Skip if not a directory
    [ -d "$src_dir" ] || continue

    # Remove trailing slash
    src_dir="${src_dir%/}"

    local dir_name=$(basename "$src_dir")

    # Skip special directories
    [[ "$dir_name" == ".git" ]] && continue
    [[ "$dir_name" == "." ]] && continue
    [[ "$dir_name" == ".." ]] && continue

    local dst_dir="$HOME/$dir_name"

    # Always create target directory and link contents individually
    mkdir -p "$dst_dir"

    for src in "$src_dir"/*
    do
      [ -e "$src" ] || continue

      local item_name=$(basename "$src")
      local dst="$dst_dir/$item_name"

      if link_file "$src" "$dst"; then
        has_changes=true
      fi
    done
  done

  if [ "$has_changes" = false ]; then
    success "all config directories already linked"
  fi
}

# Run if executed directly (not sourced)
if [[ "${BASH_SOURCE[0]}" == "${0}" ]]; then
  install_dotfiles
  install_dot_dirs
fi
