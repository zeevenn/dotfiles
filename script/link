#!/usr/bin/env bash
#
# link - create symlinks for dotfiles and config directories
#
# This script can be run standalone or sourced by other scripts.

set -e

DOTFILES_ROOT="${DOTFILES_ROOT:-$(cd "$(dirname "$0")/.." && pwd -P)}"

info () {
  printf "\r  [ \033[00;34m..\033[0m ] $1\n"
}

success () {
  printf "\r\033[2K  [ \033[00;32mOK\033[0m ] $1\n"
}

user () {
  printf "\r  [ \033[0;33m??\033[0m ] $1\n"
}

link_file () {
  local src=$1 dst=$2

  local overwrite= backup= skip=
  local action=

  if [ -f "$dst" -o -d "$dst" -o -L "$dst" ]
  then

    if [ "$overwrite_all" == "false" ] && [ "$backup_all" == "false" ] && [ "$skip_all" == "false" ]
    then

      local currentSrc="$(readlink $dst)"

      if [ "$currentSrc" == "$src" ]
      then

        skip=true;

      else

        user "File already exists: $dst ($(basename "$src")), what do you want to do?\n\
        [s]kip, [S]kip all, [o]verwrite, [O]verwrite all, [b]ackup, [B]ackup all?"
        read -n 1 action

        case "$action" in
          o )
            overwrite=true;;
          O )
            overwrite_all=true;;
          b )
            backup=true;;
          B )
            backup_all=true;;
          s )
            skip=true;;
          S )
            skip_all=true;;
          * )
            ;;
        esac

      fi

    fi

    overwrite=${overwrite:-$overwrite_all}
    backup=${backup:-$backup_all}
    skip=${skip:-$skip_all}

    if [ "$overwrite" == "true" ]
    then
      rm -rf "$dst"
      success "removed $dst"
    fi

    if [ "$backup" == "true" ]
    then
      mv "$dst" "${dst}.backup"
      success "moved $dst to ${dst}.backup"
    fi

    if [ "$skip" == "true" ]
    then
      success "skipped $src"
    fi
  fi

  if [ "$skip" != "true" ]  # "false" or empty
  then
    ln -s "$1" "$2"
    success "linked $1 to $2"
  fi
}

install_dotfiles () {
  info 'installing dotfiles'

  local overwrite_all=false backup_all=false skip_all=false

  for src in $(find -H "$DOTFILES_ROOT" -maxdepth 2 -name '*.symlink' -not -path '*.git*' -not -path "$DOTFILES_ROOT/ssh/*")
  do
    # If the symlink is under the ssh directory, map it to ~/.ssh/<name>
    if [[ "$src" == "$DOTFILES_ROOT/ssh"/* ]]; then
      dst="$HOME/.ssh/$(basename "${src%.*}")"
    else
      # Default behaviour: map to top-level dotfile, e.g. node/yarnrc.symlink -> ~/.yarnrc
      dst="$HOME/.$(basename "${src%.*}")"
    fi

    link_file "$src" "$dst"
  done
}

install_config_dirs () {
  info 'installing XDG config directories'

  local overwrite_all=false backup_all=false skip_all=false

  # Create ~/.config if it doesn't exist
  mkdir -p "$HOME/.config"

  # Link each directory in .config/ to ~/.config/
  if [ -d "$DOTFILES_ROOT/.config" ]; then
    for src_dir in "$DOTFILES_ROOT/.config"/*/
    do
      # Skip if not a directory (shouldn't happen with */ but safe)
      [ -d "$src_dir" ] || continue
      
      # Remove trailing slash for consistency
      src_dir="${src_dir%/}"

      local config_name=$(basename "$src_dir")
      local dst="$HOME/.config/$config_name"
      
      link_file "$src_dir" "$dst"
    done
  fi
}

# Run if executed directly (not sourced)
if [[ "${BASH_SOURCE[0]}" == "${0}" ]]; then
  install_dotfiles
  install_config_dirs
fi
