#!/bin/sh
#
# Delete all local branches that have been merged into HEAD. Stolen from
# our favorite @tekkub:
#
#   https://plus.google.com/115587336092124934674/posts/dXsagsvLakJ

branches=$(git branch --merged | grep -v '^*' | grep -v 'master' | grep -v 'main')
if [ -n "$branches" ]; then
  git branch -d $(echo "$branches" | tr '\n' ' ')
else
  echo "No merged branches to delete"
fi
