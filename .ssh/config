# SSH configuration
# Shared SSH config across machines

# Include local/machine-specific config (if exists)
Include ~/.dotfiles/.ssh/config.local

# Global settings
Host *
  AddKeysToAgent yes
  UseKeychain yes
  IdentityFile ~/.ssh/id_ed25519
  ServerAliveInterval 60
  ServerAliveCountMax 3

# GitHub
# Note: ProxyCommand is configured in config.local during bootstrap
Host github.com
  HostName github.com
  Port 443
  User git
  IdentityFile ~/.ssh/id_ed25519

# Example: Custom server
# Host myserver
#   HostName server.example.com
#   User username
#   Port 22
#   IdentityFile ~/.ssh/id_rsa_myserver
